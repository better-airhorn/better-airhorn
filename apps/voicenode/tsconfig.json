{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"*": ["../../node_modules/*"]
		},
		"types": ["node"],
		"esModuleInterop": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["**/node_modules", "**/dist", "**/coverage"]
}
