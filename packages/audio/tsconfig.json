{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "commonjs",
		"target": "ES2019",
		"strict": true,
		"strictNullChecks": false,
		"sourceMap": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		},
		"types": ["node"],
		"declaration": true
	},
	"include": ["./lib/**/*.ts"],
	"exclude": ["**/node_modules", "**/dist", "**/coverage"]
}
